<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QSN.View.AuthPage">



    <StackLayout Orientation="Vertical" Spacing="20">
        <Label Text="Sign in"></Label>

        <Entry Placeholder="Login"></Entry>
        <Entry Placeholder="Password" IsPassword="True"></Entry>
        
        <Label Text="Use your social account"></Label>

        <Button Text="Sign in with Google" Command="{Binding GoogleAuthCommand}"></Button>
        <Button Text="Sign in with Facebook"></Button>

        <Label Text="Sign up"></Label>
        
    </StackLayout>
    
    
</ContentPage>