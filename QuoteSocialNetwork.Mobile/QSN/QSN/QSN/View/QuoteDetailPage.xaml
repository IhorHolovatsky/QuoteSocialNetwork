<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QSN.View.QuoteDetailPage"
             Title="QuoteDetailPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Image Source="{Binding ImageSource}" Grid.Row="0"></Image>

        <Label Text="{Binding QuoteTitle}" Grid.Row="1"></Label>

        <Label Text="{Binding Text}" Grid.Row="2"></Label>

        <Label Text="{Binding AuthorName}" Grid.Row="3" HorizontalTextAlignment="End"></Label>
        
    </Grid>
</ContentPage>