<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:QSN.Converters;assembly=QSN"
             x:Class="QSN.App">
	<Application.Resources>

        <ResourceDictionary>

            <converters:Inverter x:Key="Inverter"/>

            <OnPlatform x:TypeArguments="Color" Android="#ff9800" iOS="#ff9800" x:Key="Primary"/>
            <OnPlatform x:TypeArguments="Color" Android="#c66900" iOS="#c66900" x:Key="PrimaryDark"/>
            <OnPlatform x:TypeArguments="Color" Android="#ffc947" iOS="#ffc947" x:Key="PrimaryLight"/>
            <OnPlatform x:TypeArguments="Color" Android="#ffc947" iOS="#ffc947" x:Key="Accent"/>
            <OnPlatform x:TypeArguments="Color" Android="#212121" iOS="#212121" x:Key="PrimaryText"/>
            <OnPlatform x:TypeArguments="Color" Android="#757575" iOS="#757575" x:Key="SecondaryText"/>
            <OnPlatform x:TypeArguments="Color" Android="#A0A0A0" iOS="#A0A0A0" x:Key="Placeholder"/>
        </ResourceDictionary>
        <!-- Application resource dictionary -->

	</Application.Resources>
</Application>